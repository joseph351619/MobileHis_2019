@using X.PagedList;
@using X.PagedList.Mvc;
@using Common;
@model MobileHis.Models.Areas.Sys.ViewModels.DepartmentIndexModel
@{
    ViewBag.Title = @LocalRes.Resource.Map_Sys_Department;
    Layout = "~/Areas/Settings/Views/Shared/_SettingLayout.cshtml";
}
@section header{
