                            <div class="col-md-offset-2 col-md-10">
                                <button type="submit" class="btn btn-primary">
                                    @LocalRes.Resource.Comm_Btn_Confirm
                                </button>

                            </div>
                        </div>
                        @*  } *@
                    </div>
                </div>
            </div>
        </div>
    </div>
