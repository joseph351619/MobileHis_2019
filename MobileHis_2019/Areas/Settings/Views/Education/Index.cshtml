                                @*@if (_Delete)
                                {
                                    <a href="#" class="btn btn-sm btn-danger" onclick="doDel('@(item.ID.ToString())')">
                                        <i class="fa fa-trash-o fa-lg"></i>@LocalRes.Resource.Comm_Del
                                    </a>
                                }*@
